<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:padding="16dp"
    tools:context=".MapActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="16dp">


            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/creado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Creado: Francisco"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/averia_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Nombre: Testing"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tipo_averia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tipo: Semaforo"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/des_averia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Este es un ejemplo"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Fecha: 05/09/2017"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>